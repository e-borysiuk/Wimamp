<Window x:Class="Wimamp.PlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wimamp"
        mc:Ignorable="d"
        Title="PlaylistWindow" Height="300" Width="300" WindowStyle="None">
    <Window.Resources>
        <Style x:Key="PlaylistItemLabel">
            <Setter Property="Control.Foreground" Value="DarkOrange"></Setter>
        </Style>
        <Style x:Key="PlaylistItemPlayButton">
            <Setter Property="Control.Background" Value="Transparent"></Setter>
            <Setter Property="Control.BorderBrush" Value="Transparent"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="Silver">
        <Border Background="LightSlateGray" Margin="10,10,0,0" Padding="5" BorderBrush="#FF000000" BorderThickness="2" CornerRadius="8,8,8,8" HorizontalAlignment="Left" VerticalAlignment="Top" Width="272" Height="272">
            <ListBox Background="Black">
                <StackPanel>
                    <!-- single item -->
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <Label Style="{StaticResource PlaylistItemLabel}">03:47</Label>
                        <Label Style="{StaticResource PlaylistItemLabel}">Good Band - Some Music</Label>
                        <Button Style="{StaticResource PlaylistItemPlayButton}" Visibility="Visible">
                            <Button.Content>
                                <Image Source="playIcon.png" Width="12" Height="12"></Image>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <Label Style="{StaticResource PlaylistItemLabel}">03:47</Label>
                        <Label Style="{StaticResource PlaylistItemLabel}">Good Band - Some Music</Label>
                        <Button Style="{StaticResource PlaylistItemPlayButton}" Visibility="Hidden">
                            <Button.Content>
                                <Image Source="playIcon.png" Width="12" Height="12"></Image>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ListBox>
        </Border>
    </Grid>
</Window>
